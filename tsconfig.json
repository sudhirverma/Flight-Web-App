{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6"
        ],
        "sourceMap": true,
        /* Strict Type-Checking Option */
        "strict": false,   /* enable all strict type-checking options */
        /* Additional Checks */
        "noUnusedLocals": false,
        "experimentalDecorators": true,
        "resolveJsonModule": true
    }
}